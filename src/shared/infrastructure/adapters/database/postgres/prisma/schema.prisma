generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ShortUrls ShortUrls[]

  @@map("user")
}

model ShortUrls {
  id        String   @id
  idUser    String
  url       String
  shortUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [idUser], references: [id])

  @@map("short_urls")
}
